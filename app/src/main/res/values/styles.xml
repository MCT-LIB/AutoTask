<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="liftOnScroll">true</item>
        <item name="liftOnScrollTargetViewId">@id/scroll_view</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@color/toolbar_color</item>
        <item name="subtitleTextColor">@color/toolbar_color</item>
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="AppToolbar.NavBack">
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationContentDescription">@string/content_desc_back</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:backgroundTint">?android:attr/textColorHint</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="Divider.Medium">
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="Divider.Large">
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="SettingsBigTitle">
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/settings_big_title_text_size</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>